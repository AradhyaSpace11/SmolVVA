<?xml version="1.0"?>
<robot name="simple_arm">

  <link name="base_link">
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
    <visual>
      <geometry><cylinder radius="0.15" length="0.05"/></geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <material name="grey"><color rgba="0.35 0.35 0.35 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.15" length="0.05"/></geometry>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="base_motor">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0.04"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    
    <visual>
      <geometry><cylinder radius="0.12" length="0.08"/></geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.0 0.8 0.0 1"/> </material>
    </visual>
    
    <visual>
      <origin xyz="0 -0.12 0.04" rpy="0 0 0"/> <geometry>
        <box size="0.02 0.04 0.06"/> </geometry>
      <material name="yellow_marker">
        <color rgba="1.0 1.0 0.0 1"/> </material>
    </visual>

    <collision>
      <geometry><cylinder radius="0.12" length="0.08"/></geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="base_yaw_joint" type="revolute">
    <parent link="base_link"/>
    <child link="base_motor"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="2.0"/>
  </joint>

  <link name="link1">
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0 0 0.15"/>
      <inertia ixx="0.0117" ixy="0" ixz="0" iyy="0.0117" iyz="0" izz="0.0009"/>
    </inertial>
    <visual>
      <geometry><box size="0.06 0.06 0.30"/></geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry><box size="0.06 0.06 0.30"/></geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="base_motor"/>
    <child link="link1"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="2.0"/>
  </joint>

  <link name="link2">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0.15 0 0"/>
      <inertia ixx="0.0007" ixy="0" ixz="0" iyy="0.0092" iyz="0" izz="0.0092"/>
    </inertial>
    <visual>
      <geometry><box size="0.30 0.04 0.04"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <material name="blue"><color rgba="0 0 1 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.30 0.04 0.04"/></geometry>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="2.0"/>
  </joint>

  <link name="end_link">
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 -0.12"/>
      <inertia ixx="0.0077" ixy="0" ixz="0" iyy="0.0077" iyz="0" izz="0.0005"/>
    </inertial>
    <visual>
      <geometry><box size="0.06 0.06 0.24"/></geometry>
      <origin xyz="0 0 -0.12" rpy="0 0 0"/>
      <material name="bright_red"><color rgba="1 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.06 0.06 0.24"/></geometry>
      <origin xyz="0 0 -0.12" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="wrist_joint" type="revolute">
    <parent link="link2"/>
    <child link="end_link"/>
    <origin xyz="0.30 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="2.0"/>
  </joint>

  <link name="gripper_left">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 -0.06"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><box size="0.03 0.04 0.12"/></geometry> <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <material name="yellow"><color rgba="1 1 1 1"/></material>
    </visual>
    <collision>
      <geometry><box size="0.03 0.04 0.12"/></geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="gripper_left_joint" type="revolute">
    <parent link="end_link"/>
    <child link="gripper_left"/>
    <origin xyz="0 0.03 -0.24" rpy="0 0 0"/> <axis xyz="1 0 0"/>
    <limit lower="0" upper="0.8" effort="20" velocity="1.0"/>
  </joint>

  <link name="gripper_right">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 -0.06"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry><box size="0.03 0.04 0.12"/></geometry> <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry><box size="0.03 0.04 0.12"/></geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
    </collision>
  </link>

  <joint name="gripper_right_joint" type="revolute">
    <parent link="end_link"/>
    <child link="gripper_right"/>
    <origin xyz="0 -0.03 -0.24" rpy="0 0 0"/> <axis xyz="1 0 0"/>
    <limit lower="-0.8" upper="0" effort="20" velocity="1.0"/>
  </joint>

</robot>